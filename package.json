{
  "name": "node-sharkies",
  "version": "0.0.1",
  "description": "",
  "main": "dist/main.js",
  "author": "@agildav",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write --tab-width 2 \"src/**/*.ts\"",
    "start": "npm run start:dev",
    "start:dev": "nodemon --config nodemon.json",
    "prestart:prod": "npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "4.17.1",
    "knex": "^0.19.0",
    "morgan": "^1.9.1",
    "pg": "^7.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "dotenv": "^8.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.18.9",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "pre-commit": [
    "format",
    "test"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
